.container
  .form-group.row
    %h2 Customer
    = label_tag 'Customer name', nil, class:'col-sm-2 col-form-label'
    .col-xs-4
      = text_field_tag :customer_name, @customer.full_name, id: 'customer_name', class: 'form-control', disabled: true
  .form-group.row
    = label_tag 'Email', nil, class:'col-sm-2 col-form-label'
    .col-xs-4
      = text_field_tag :customer_email, @customer&.email, id: 'customer_email', class:'form-control', disabled: true
  .form-group.row
    = label_tag 'Outfitter name', nil, class:'col-sm-2 col-form-label'
    .col-xs-4
      = text_field_tag :outfitter, @outfitter.name, class:'form-control', disabled: true
