= fields_for @images do |f|
  .form-group
    .alteration-images
      - f.object.each do |image|
        #image-block
          = link_to image_tag(image.image_url, height: '200', width: '200'), image.image_url, class: :fancybox, rel: :group, id: "image-block-#{image.id}"
          = link_to 'Delete', alteration_summary_alteration_image_path(image.alteration_summary, image), id: "image-block-#{image.id}",
            class: 'delete-alt-image-btn btn btn-danger', method: :delete, remote: true, data: { confirm: 'Are you sure?' } unless current_user.tailor?
